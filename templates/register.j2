{% extends "navbar-template.j2" %}
{% block title %}Home{% endblock %}

{% block body %}
   <!-- Container für die komplette Login-Seite -->
<div class="container border rounded w-50 mt-5">
  <!-- Container Unterteilung der Überschrift "Login" -->
  <div class="container my-5">
    <h1 class="text-center mb-5">PSoC Forum Register</h1>


  <div class="container-fluid me-auto w-75">
    <form class="needs-validation" method="POST" novalidate>

      <div class="form-group mb-5">
        <label for="validationName">Name</label>
        <input type="text" class="form-control" id="validationName" placeholder="Name" name="name" required>
      </div>
      <div class="form-group mb-5">
        <label for="validationUsername">Username</label>
        <input type="text" class="form-control" id="validationUsername" placeholder="Username" name="username" required>
      </div>
      <div class="form-group mb-5">
        <label for="validationPassword">Password</label>
        <input type="password" class="form-control" id="validationPassword" placeholder="Password" name="password" required>
      </div>
      {% if g.error %}
            <div class="alert alert-danger" role="alert">
                Username already in use!
            </div>
        {% endif %}
      <div class="form-group text-center pb-5">
        <input type="submit" value="Register">
      </div>
    </form>
    <div class="text-center pb-5">
      Already a member?
      <a href="/login">Login</a>
    </div>
  </div>
</div>
    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (() => {
        'use strict';

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation');

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach((form) => {
          form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      })();
</script>
{% endblock %}